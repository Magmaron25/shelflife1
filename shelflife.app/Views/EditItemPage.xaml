<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="shelflife.app.Views.EditItemPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Item">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Entry Placeholder="Name" Text="{Binding Name}" />
            <Entry Placeholder="Quantity" Text="{Binding Quantity}" Keyboard="Numeric" />
            <DatePicker Date="{Binding Date}" />
            <Entry Placeholder="Location" Text="{Binding Location}" />
            <Entry Placeholder="Barcode" Text="{Binding Barcode}" />
            <Editor Placeholder="Notes" Text="{Binding Notes}" AutoSize="TextChanges" />
            <Button Text="Save" Command="{Binding SaveCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>