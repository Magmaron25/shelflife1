<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="shelflife.app.Views.ItemsPage"
    x:Name="Page"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ShelfLife">

    <!-- Toolbar with add button -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Command="{Binding AddNewCommand}" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Padding="12" Spacing="8">
        <!-- Search bar bound to Search property; when the search button is pressed on the
             keyboard, the SearchCommand triggers a reload via LoadCommand. -->
        <SearchBar Placeholder="Searchâ€¦"
                   Text="{Binding Search}"
                   SearchCommand="{Binding LoadCommand}" />

        <!-- Pull-to-refresh containing the collection of items.  IsRefreshing is bound
             to a property on the view model, and the refresh triggers the same
             Load command. -->
        <RefreshView IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding LoadCommand}">
            <CollectionView ItemsSource="{Binding Items}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="12"
                               Margin="0,6"
                               BorderColor="LightGray"
                               HasShadow="False">
                            <Grid ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto,Auto">
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{Binding Name}"
                                       FontAttributes="Bold" />
                                <Label Grid.Row="1" Grid.Column="0"
                                       Text="{Binding ExpiryPretty}"
                                       FontSize="12"
                                       TextColor="Gray" />

                                <!-- Edit button triggers the EditCommand on the page's binding context -->
                                <Button Grid.Row="0" Grid.Column="1"
                                        Text="Edit"
                                        Command="{Binding BindingContext.EditCommand, Source={x:Reference Page}}"
                                        CommandParameter="{Binding .}" />
                                <!-- Delete button triggers the DeleteCommand on the page's binding context -->
                                <Button Grid.Row="0" Grid.Column="2"
                                        Text="Delete"
                                        BackgroundColor="Tomato"
                                        TextColor="White"
                                        Command="{Binding BindingContext.DeleteCommand, Source={x:Reference Page}}"
                                        CommandParameter="{Binding .}" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </VerticalStackLayout>
</ContentPage>